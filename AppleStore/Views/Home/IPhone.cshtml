@model IEnumerable<Apple.Models.Models.Product>

<section class="section section-welcome" data-anim-scroll-group="Welcome" data-component-list="WelcomeEnhanced WelcomeMedia" data-analytics-section-engagement="name:hero">
    <div class="section-content-responsive">
        <header class="welcome-header row">
            <h1 class="welcome-header-title typography-welcome-header-title">iPhone</h1>
            <div class="welcome-header-description">
                <p>Designed to be loved.</p>
            </div>
        </header>
    </div>
    <div class="welcome-video-wall-container playing loaded" style="clip-path: inset(0%);">
        <div class="welcome-video-content-container">
            <video role="img" playsinline="true" preload="metadata" class="responsive-video" muted="" poster="" aria-label="Chào mừng tới Apple Store" autoplay="autoplay" loop>
                <source src="/video/videoiphone.mp4" type="video/mp4" />
            </video>
        </div>
    </div>
</section>

<style>
    .responsive-video {
        width: 100%;
        max-width: 100vw; /* Giới hạn chiều rộng tối đa bằng chiều rộng màn hình */
        height: auto; /* Tự động điều chỉnh chiều cao để giữ tỷ lệ */
    }
</style>

<div class="container">
    <div class="row">
        @foreach (var item in Model)
        {
            <div class="col-lg-6 mb-4">

                <div class="card h-100">
                    <a asp-controller="Home" asp-action="Details" asp-route-id="@item.ProductID">
                        <img src="@item.ImageURL" class="card-img-top" alt="Product Image" />
                    </a>
                    <div class="card-body">
                        <h5 class="card-title">@item.ProductName</h5>
                        <p class="card-text">@item.Description</p>
                        <p class="card-text text-primary">Price: $@item.ProductPrice</p>
                    </div>
                </div>
            </div>
        }
    </div>
</div>
<style>
    .card-img-top {
        object-fit: cover;
        height: 200px;
    }

    .card {
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        transition: transform 0.2s ease-in-out;
    }

        .card:hover {
            transform: scale(1.05);
        }

    .card-title {
        font-size: 1.25rem;
        font-weight: bold;
        color: #333;
    }

    .card-text {
        color: #666;
        font-size: 1rem;
    }

</style>